<%= form_tag("/search", method: "get", id: "restaurant_search") do %>
  <%= hidden_field_tag "latitude", @community.latitude %>
  <%= hidden_field_tag "longitude", @community.longitude %>
  <%= label_tag(:name, "Restaurant Name:") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search for Restaurant", :id=>'restaurant_search', :class=>'btn btn-primary btn-lg', 'data-toggle'=>"modal", 'data-target'=>'#myModal') %>
<% end %>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Choose a Restaurant to Add to Your Community</h4>
      </div>
      <div class="modal-body">
        <%= form_for restaurant, html: {id: 'new_restaurant_form'} do |f| %>
          <%= f.hidden_field :community_id %>
          <%= f.hidden_field :yelp_url %>
          <%= f.hidden_field :address %>
          <%= f.hidden_field :category %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :latitude %>
          <%= f.hidden_field :longitude %>
        <% end %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Restaurant</th>
              <th>Address</th>
            </tr>
          <thead>
          <tbody id="rest-list">
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Maybe Not</button>
      </div>
    </div>
  </div>
</div>


