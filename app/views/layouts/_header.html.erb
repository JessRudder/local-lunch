    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if member_signed_in? %>
          <% if current_member.communities.empty? %>
            <li><%= link_to "Join A Community!", communities_path %></li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Communities<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% current_member.communities.each do |community| %>
                  <li><%= link_to community.name, community %></li>
                  <li class="lunch-groups"><%= link_to " - Lunch Groups", community_groups_path(community) %></li>
                <% end %>
              </ul>
            </li>
          <% end %>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <% if member_signed_in? %>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= current_member.email %><b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "My Profile", current_member %></li>
            <li><%= link_to "Profile Edit", edit_member_registration_path %></li>
            <li><%= link_to "Sign Out", destroy_member_session_path, method: :delete %></li>
          </ul>
          <% else %>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Sign In/Sign Up <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Sign In", new_member_session_path %></li>
            <li><%= link_to "Sign Up", new_member_registration_path %></li>
          </ul>
          <% end %>
