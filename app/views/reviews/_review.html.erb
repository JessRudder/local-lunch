<div id="review-<%= review.id %>" class="row">
  <div class="col-sm-10">
    <h5>
      <strong><%= "#{review.rating} -" %></strong>
      <%= link_to review.member.name, member_path(review.member) %>

    </h5>
    <div class="review-text"><%= review.text %></div>
    <% if review.member == current_member %>
      <div class="review-edit-delete">
        <%= button_to "Edit", edit_review_path(review), method: :get, remote: true, class: 'btn btn-primary btn-sm' %>
        <%= button_to "Delete", review_path(review), method: :delete, remote: true, class: 'btn btn-danger btn-sm' %>
      </div>
    <% end %>
  </div>
</div>