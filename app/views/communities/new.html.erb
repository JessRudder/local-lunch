<h1>New Community</h1>

<%= form_for(@community, html: {class: "form-horizontal"}) do |f| %>

  <%= render 'shared/errors', object: @community %>

  <div class="form-group">
    <%= f.label :name, "Name:", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="community_address" class="col-sm-2 control-label">Address: </label>
    <div class="col-sm-6">
      <input type="text" id="community_address" name="community[address]" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.button 'Create', type: 'submit', class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
